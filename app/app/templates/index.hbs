{{! navigation}}

<div class="site-wrapper">

   {{!< default}}
   {{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

   {{! The big featured header }}
   <header class="main-header no-cover">
      <nav class="main-nav overlay clearfix">
         {{#if model.settings.logo}}{{#link-to "index" class="blog-logo"}}<img src="{{model.settings.logo}}" alt="{{model.settings.title}}" />{{/link-to}}{{/if}}
      </nav>
      <div class="vertical">
         <div class="main-header-content inner">
            <h1 class="page-title">{{model.settings.title}}</h1>
            <h2 class="page-description">{{model.settings.description}}</h2>
         </div>
      </div>
      <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
   </header>

   {{! The main content area on the homepage }}
   <main id="content" class="content" role="main">

      {{post-list posts=model.posts author=model.settings.author}}

      {{outlet}}

   </main>

   <footer class="site-footer clearfix">
      <section class="copyright"><a href="{{model.settings.url}}">{{model.settings.title}}</a> &copy; {{date format="YYYY"}}</section>
   </footer>

</div>
