<article class="post">
   <header class="post-header">
      <h2 class="post-title"><a href="{{post.url}}">{{{post.title}}}</a></h2>
   </header>
   <section class="post-excerpt">
      <p>{{excerpt content=post.html words="26"}} <a class="read-more" href="{{post.url}}">&raquo;</a></p>
   </section>
   <footer class="post-meta">
      {{#if post.author.image}}<img class="author-thumb" src="{{post.author.image}}" alt="{{post.author.name}}" nopin="nopin" />{{/if}}
      {{post.author.name}}
      {{! tags prefix=" on "}}
      <time class="post-date" datetime="{{date post.publishedAt format='YYYY-MM-DD'}}">{{date post.publishedAt format="DD MMMM YYYY"}}</time>
   </footer>
</article>